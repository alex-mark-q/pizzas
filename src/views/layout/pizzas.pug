include ../components/mixins/rImg
block variables
	// - const ingredients_pizza = [{img: "public/images/png/vegatables/023.svg",text: "vegetables"},{img: "public/images/png/vegatables/023.svg",text: "vegetables"}];
	- const ingredients_pizza = [{img: "@images/svg/pizza/svg/product-1-600x500.png", text: "add to cart"}];
	- const attributes = {};
	- attributes.main = 'main';
	- attributes.pizza = 'pizza';
	- attributes.panel = 'panel';
	- attributes.ingredients = 'ingredients';
	
block content
div(class=`${attributes.main}__aside col-lg-1`)
	div(class=`${attributes.main}__logo`)
		include ../components/left-sidebar/left-sidebar
div(class=`${attributes.main}__contents`)
	.header__content
		include ../components/menu/menu
			ul.header__menu.menu
				each itemMenu in menu
					li.l-header__menu-item
						a.l-header__menu-link.gray__link-color(href=itemMenu.link) #{itemMenu.text}
	div(class=`${attributes.panel}__ingredients`)
		.header__content
			span pizzas
			div(class=`${attributes.ingredients}__button`)
				button ingredients
			div(class=`${attributes.ingredients}__elements`)
					ul.header__menu.ingredients_pizza
						each itemIng in ingredients_pizza
							li.ingredients__menu-item.ingredients__close
								a.ingredients__menu-link
									+render(itemIng.img)
									// img(inline src=`${itemIng.src}`)
									// img(inline src=require(`${item.src}`))
									// img(src=(itemIng.src))
									// - var path = `'@images' + ${item.src}`;
									// img(inline src=require(path))
									// img(inline src=`{@images+${item.src}}`)
	div(class=`${attributes.main}__pizzas`)
		include ../components/pizza/pizza
div(class=`${attributes.main}__sidebar`).col-lg-1
	include ../components/right-sidebar/right-sidebar
